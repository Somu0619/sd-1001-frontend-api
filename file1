pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
            echo 'Build Stage automatically'
                sh 'mvn clean install'
            }
        }
    


   
        stage('Delopy') {
            steps {
            echo 'Build Stage automatically'
                sh 'sudo cp /var/lib/jenkins.m2/repository/example/demo/helloworld-1.0.war /opt/apache-tomcat-10.1.7/webapps'
            }
        }
        
    stages {
        stage('test') {
            steps {
              echo 'Test'
            }
        }
    }
}
